{
  "compilerOptions": {
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    // 隐式的any 是否展示
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "alwaysStrict": false,
    "lib": [
      "es6",
      "DOM"
    ]
  },
  "include": [
    "src/index.ts",
    "src/global.d.ts"
  ]
}